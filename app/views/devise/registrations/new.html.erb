<div class="flex flex-col">

  <%= render "partials/navbar" %>

  <div class="container mx-auto mt-48 w-96">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"bg-gray-50 mb-4 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
  </div>

  <div class="field">
    <%= f.label :password, "Mot de passe (12 caractÃ¨res minimum)", class:"block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
    <%= f.password_field :password, autocomplete: "new-password", class:"bg-gray-50 mb-4 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmez le mot de passe", class:"block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"bg-gray-50 mb-4 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
  </div>

  <div class="actions">
    <%= f.submit "Valider", class:"focus:outline-none bg-amber-400 hover:bg-amber-500 focus:ring-2 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-yellow-900" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>